  :hasPart :Awb_Artikel_10_1 ;
  :hasPart :Awb_Artikel_10_2 .

# Artikel niveau - Article (Artikel)
:Awb_Artikel_10_1 rdf:type :Article ;
  gufo:typeOf :Article ;
  :number "10:1" ;
  :title "Begripsbepaling" ;
  :text "Onder mandaat wordt verstaan: de bevoegdheid om in naam van een bestuursorgaan besluiten te nemen." ;
